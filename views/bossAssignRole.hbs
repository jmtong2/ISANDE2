</head>

<body>
    
    {{> navbarBoss}}

    <div class="bg-light mx-0 py-3  vh-100">
        <div class="p-3">
            <section>
                <div class="card pb-1 mb-3 border-3 " style="border-bottom-color: #0d6efd">
                    <div class="card-body rounded text-right row">
                        <span class="col">
                            <h3 class="text-secondary">Assign Role</h3>
                        </span>
                    </div>
                </div>
            </section>
            <div class="row justify-content-center mt-5">
                <div class="col-lg-4 col-md-8">
                    <div class="card-body">
                        <form method="post" action="/boss/postAssignRole">
                            <div class="mb-4">
                                <p><strong>First Name:</strong> {{firstName}}</p>
                            </div>

                            <div class="mb-4">
                                <p><strong>Last Name:</strong> {{lastName}}</p>
                            </div>
                            
                            <div class="mb-4">
                                <label for="email" class="d-none form-label"><strong>Email:</strong> {{email}}</label>
                                <input type="hidden" name="email" id="email" class="form-control field" value="{{email}}"/>
                                <p><strong>Email:</strong> {{email}}</p>
                            </div>

                            <div class="mb-4">
                                <p><strong>Current Role:</strong> {{role}}</p>
                            </div>

                            <div class="mb-4">
                                <label for="role" class="form-label"><strong>Assign New Role</strong></label>
                                <select id="single" name="role" id="role" class="form-select form-select-chosen field" data-placeholder="ROLE TYPE" required>
                                    <option value="" disabled selected>Select Role</option>
                                    <option value="unassigned">Unassigned</option>
                                    <option value="boss">Boss</option>
                                    <option value="cashier">Cashier</option>
                                    <option value="sales manager">Sales Manager</option>
                                    <option value="inventory">Inventory</option>
                                    <option value="purchasing">Purchasing</option>
                                </select>
                            </div>

                            <div class="d-grid">
                                <button type="submit" id="confirmAssignRole" class="btn btn-primary">Confirm</button>
                            </div>
                        </form>

                        <div class="d-grid pt-2">
                            <a href="/boss/getAllUsers" class="btn btn-secondary">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>

            </div>
        </div>
    </div>

    

</body>

</html> 
