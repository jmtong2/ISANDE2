<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
  <title>Purchased Ingredients</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v6.0.0-beta1/css/all.css">
  <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>

  

</head>

<body>

  <title>Purchasing</title>
  {{> navbarPurchasing}} 

  <div class="bg-light p-3" style="height: 100vh;">
    <div class="card border-3 " style="border-bottom-color: #0d6efd">
      <div class="card-body rounded ">
        <div class="d-flex justify-content-between">
          <h3 class="text-secondary">Create Purchase Order</h3>
          <!-- Button trigger modal -->
          <span class="createPurchasedIngredient text-end fs-6 pt-1">
           <!-- Button trigger modal -->
           <button type="button" class="btn btn-info " data-bs-toggle="modal" data-bs-target="#exampleModal">
            <i class="fa-solid fa-circle-plus"></i>
            Create Purchased Ingredient
          </button>
        </span>
      </div>

      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              ...
              <section>
                <div class="card position-absolute top-10 start-50 translate-middle" style="width: 100vh">
                  <div style="background-color:#F8F5F1;">
                    <form action="/purchasing/addPurchasedIngredient" method="POST" class="m-4 pb-5">
                      <header class="pb-3">
                        <h3>Create Purchased Ingredient</h3>
                      </header>

                      <section>
                        <div class="input-group mb-3">
                          <span class="input-group-text col-4 bg-info" id="basic-addon3">Name</span
                          >
                          <input 
                          type="text"
                          class="form-control"
                          id="purchased-ingredient-name"
                          aria-describedby="basic-addon3"
                          name="name"
                          />
                        </div>


                        <div class="input-group mb-3">
                        <span
                        class="input-group-text col-4 bg-info"
                        id="basic-addon3"
                        >Ingredient</span
                        >
                        <select
                        class="form-select"
                        id="inputGroupSelect01"
                        name="ingredient"
                        required
                        >
                        <option selected>Choose...</option>
                        {{#each ingredients}}
                        <option value="{{{ingredientName}}}">{{ingredientName}}</option>
                        {{/each}}
                      </select>

                    </div>

                      <div class="input-group mb-3">
                        <span
                        class="input-group-text col-4 bg-info"
                        id="basic-addon3"
                        >Unit of Measurement</span
                        >
                        <select
                        class="form-select"
                        id="inputGroupSelect01"
                        name="uom"
                        required
                        >
                        <option selected>Choose...</option>
                        {{#each uom}}
                        <option value="{{{abbrev}}}">{{abbrev}}</option>
                        {{/each}}
                      </select>
                      <button type="button" class="btn btn-warning rounded ms-3 float-end"><a class="text-dark" style="text-decoration: none" href="/getAddUOMPurchasing">Add Uom</a></button>


                    </div>

                    <div class="input-group mb-3">
                      <span
                      class="input-group-text col-4 bg-info"
                      id="basic-addon3"
                      >Quantity Per Stock</span
                      >
                      <input
                      type="number"
                      min="0"
                      class="form-control"
                      id="quantityPerStock"
                      aria-describedby="basic-addon3"
                      name="quantityPerStock"
                      required
                      />
                    </div>

                    <div class="float-end">
                     <button type="button" class="btn btn-secondary mx-3" data-bs-dismiss="modal">Cancel</button>  
                     <button type="submit" class="d-inline float-end btn btn-m bg-info">
                      Save
                    </button>
                  </div>
                </section>
              </form>
            </div>
          </div>
        </section>



      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<form class="col">
  <div class="row">
    <label for="exampleInputEmail1" style="width: 180px" class="form-label ">Purchased Ingredient</label>
    <select
    id="purchasedIngredient"
    class="form-select "
    name="purchasedIngredient"
    required
    style="width: 200px"
    >
    <option selected>Choose...</option>
    {{#each purchasedIngredients}}
    <option  value="{{{purchasedIngredientName}}}">{{purchasedIngredientName}}</option>
    {{/each}}
  </select>

  <label for="exampleInputPassword1" style="width: 85px" class="form-label">Quantity</label>
  <input type="number" class=" form-control" style="width: 80px" min="0" name="qty" id="qty">

  <button type="button" class=" btn btn-primary col-1 ms-3" id="purchase"  name="purchase" value="PURCHASE">Purchase</button>
</div>
</form>

</div>
</div>


<div class="col-md-12 mt-3">
  <div class="card">
    <div class="card-body overflow-auto rounded" style="height: 60vh">


      <div class="table-responsive rounded">
        <table class="table overflow-auto table-hover table-hover">
          <thead>
            <tr class="bg-secondary bg-linear-gradien, text-light">
              <th class="text-center">Name</th>
              <th class="text-center">System Ingredient</th>
              <th class="text-center">Quantity per Stock</th>
              <th class="text-center">Unit Of Measurement</th>
              <th class="text-center">Quantity</th>
              <th class="text-center"></th>

              <th></th>
            </tr>
          </thead>
          <tbody id="purchasedTable">

          </tbody>
        </table>

      </div>

    </div>

  </div>
  <input type="button"  class="mt-3 btn btn-success float-md-end"name="done" id="done" value="Done">
</div>


<script>
  $(document).ready( () => {

    var cart = [];
    var purchasedQuantity = [];
    var listIndex = [];
    var index = 0;
    if (cart.length === 0)
      $('#done').prop('disabled', false);

    $('#purchase').click( () => {
      const purchasedIngredient = $('#purchasedIngredient').val();
      const qty = $('#qty').val();
      

      if(purchasedIngredient == 'Choose...' || qty == ''){
        alert('Please input all both the name and quantity!');

      }
      else {
        $.get("/listPurchased", {
          purchasedIngredient: purchasedIngredient
        },
        purchasedIngredients => {

           // $('#purchasedIngredient').val("Choose");


           let purchased =  `<tr id="row`+index+`">
           <td>`+purchasedIngredients.ingredient.ingredientName+`</td>
           <td class="text-center">`+purchasedIngredients.purchasedIngredientName+`</td>
           <td class="text-center">`+purchasedIngredients.quantityPerStock+`</td>
           <td class="text-center">`+purchasedIngredients.uom.abbrev+`</td>
           <td class="text-center">`+qty+`</td>
           <td class="text-center"><button class="btn btn-danger btn_remove mb-2 remove" name='remove' id="` +
                index +
                `">X</button></td>
           </tr>`;
           $("#purchasedTable").append(purchased);
           $('#purchasedIngredient').prop('selectedIndex',0);
           $('#qty').val("");
          //store it in array 
          cart.push(purchasedIngredients);
          purchasedQuantity.push(qty);
          listIndex.push(index);
          index++;
        });

        $(document).on("click", ".remove", function () {
          const button_id = $(this).attr("id");
          $(`#row` + button_id + ``).remove();
          let i = button_id;
          let num = listIndex.findIndex(item => item == i);
          
          cart.splice(num, 1);
          purchasedQuantity.splice(num, 1);
          listIndex.splice(num,1);

      });

      }
    });

    $('#done').click( () => {
    if (cart.length === 0) {
      $('#done').prop('disabled', false);
      alert('Add ingredients first!');
    } else {
     $.get("/makePurchasedOrder", {
      cart: cart,
      purchasedQuantity: purchasedQuantity
    }, result => {
      cart = [];
      purchasedQuantity = [];
      $("#purchasedTable").remove();
      alert('Purchased Ingredients are added!');
    });

   }



 });


  });



</script>




</body>

</html>
