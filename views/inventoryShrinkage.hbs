<body style="background-color:#E6E6DE">

  <title>Shrinkage Report</title>
 {{> navbarInventory}} 
<!-- End of navbar -->

  <div class="p-3" style=" background-color: #E6E6DE">
    <div class="card">
      <div class="card-body rounded shadow" style="background-color: #CC985A">
        <div class="d-flex justify-content-between">
          <h3 class="text-light mb-3">Input Shrinkage</h3>
      </div>


<form class="col">
  <div class="row">
    <label for="exampleInputEmail1" style="width: 100px" class="form-label mt-2 text-light">Ingredient</label>
    <select
    id="ingredient"
    class="form-select "
    name="ingredient"
    required
    style="width: 200px"
    >
    <option selected>Choose...</option>
    {{#each purchasedIngredients}}
    <option  value="{{{purchasedIngredientName}}}">{{purchasedIngredientName}}</option>
    {{/each}}
  </select>

  <label for="exampleInputPassword1" style="width: 85px" class="form-label mt-2 text-light">Quantity</label>
  <input type="number" class=" form-control" style="width: 80px" min="0" name="qty" id="qty">

  <label for="exampleInputEmail1" style="width: 80px" class="form-label mt-2 text-light">Reason</label>
    <select
    id="reason"
    class="form-select "
    name="reason"
    required
    style="width: 200px"
    >
    <option selected>Choose...</option>
    {{#each purchasedIngredients}}
    <option  value="{{{purchasedIngredientName}}}">{{purchasedIngredientName}}</option>
    {{/each}}
  </select>

  <div class="my-3 col-9 d-flex">
   <label for="exampleInputPassword1" style="width: 85px" class="form-label mt-2 text-light">Remarks</label>
  <textarea class="form-control ms-3" id="exampleFormControlTextarea1" rows="1"></textarea>
</div>

   <button type="button" class="text-light btn col-2 my-3" id="shrinkage"  name="shrinkage" value="shrinkage" style="background-color: #198754"><i class="far fa-plus-square"></i> Add Shrinkage</button>

</div>
</form>

</div>
</div>


<div class="col-md-12 mt-3">
  <div class="card">
    <!-- <div class="card-body overflow-auto rounded shadow" style="height: 40vh; background-color: #7CA6A6"> -->
      <div class="card-body overflow-auto  border rounded shadow-lg bg-light">
      <div class="table-responsive rounded">
        <table class="table overflow-auto table-hover table-bordered table-hover">
          <thead>
            <tr class="text-light" style="background-color: #7CA6A6">
              <th class="text-center">Name</th>
              <th class="text-center">Quantity</th>
              <th class="text-center">Quantity per Stock</th>
              <th class="text-center">Reason</th>
              <th class="text-center">Remarks</th>
              <th></th>
            </tr>
          </thead>
          <tbody id="purchasedTable">
            <tr>
                <td class="text-center">Milk</td>
                <td class="text-end">5</td>
                <td class="text-center">10 g</td>
                <td class="text-center">Spoilage</td>
                <td class="text-center col-4">It was left open for quite some time.</td>
                <th><i class="fad fa-trash-alt"></i></th>
              </tr>

           
          </tbody>
        </table>

      </div>

    </div>

  </div>
  <a href="inventoryShrinkageReport.html" type="button"  class="mt-3 btn btn-success float-md-end"name="done" value="Report Shrinkage">Shrinkage Report</a>
</div>


<script>
  $(document).ready( () => {

    var cart = [];
    var purchasedQuantity = [];
    var listIndex = [];
    var index = 0;
    if (cart.length === 0)
      $('#done').prop('disabled', false);

    $('#purchase').click( () => {
      const purchasedIngredient = $('#purchasedIngredient').val();
      const qty = $('#qty').val();


      if(purchasedIngredient == 'Choose...' || qty == ''){
        alert('Please input all both the name and quantity!');

      }
      else {
        $.get("/listPurchased", {
          purchasedIngredient: purchasedIngredient
        },
        purchasedIngredients => {

           // $('#purchasedIngredient').val("Choose");


           let purchased =  `<tr id="row`+index+`">
           <td>`+purchasedIngredients.ingredient.ingredientName+`</td>
           <td class="text-center">`+purchasedIngredients.purchasedIngredientName+`</td>
           <td class="text-center">`+purchasedIngredients.quantityPerStock+`</td>
           <td class="text-center">`+purchasedIngredients.uom.abbrev+`</td>
           <td class="text-center">`+qty+`</td>
           <td class="text-center"><button class="btn btn-danger btn_remove mb-2 remove" name='remove' id="` +
                index +
                `">X</button></td>
           </tr>`;
           $("#purchasedTable").append(purchased);
           $('#purchasedIngredient').prop('selectedIndex',0);
           $('#qty').val("");
          //store it in array
          cart.push(purchasedIngredients);
          purchasedQuantity.push(qty);
          listIndex.push(index);
          index++;
        });

        $(document).on("click", ".remove", function () {
          const button_id = $(this).attr("id");
          $(`#row` + button_id + ``).remove();
          let i = button_id;
          let num = listIndex.findIndex(item => item == i);

          cart.splice(num, 1);
          purchasedQuantity.splice(num, 1);
          listIndex.splice(num,1);

      });

      }
    });

    $('#done').click( () => {
    if (cart.length === 0) {
      $('#done').prop('disabled', false);
      alert('Add ingredients first!');
    } else {
     $.get("/makePurchasedOrder", {
      cart: cart,
      purchasedQuantity: purchasedQuantity
    }, result => {
      cart = [];
      purchasedQuantity = [];
      $("#purchasedTable").remove();
      alert('Purchased Ingredients are added!');
    });

   }



 });


  });



</script>




</body>

</html>
