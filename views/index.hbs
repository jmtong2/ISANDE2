<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <link rel="stylesheet" type="text/css" href="../css/loginstyle.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" />
    <title>Login</title>
</head>

<body>
    <!-- Login Form -->

    <div class="container">

        <div class="mx-auto" style="width: 200px;"><a href="/"><img src="../images/loginlogo.png" style="width: 200px; height: 100px; object-fit: contain" alt="LOGO"></a></div>

        <div class="row justify-content-center mt-3 ">

            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="card shadow-lg">
                    <div class="card-title text-center">
                        <h2 style="color: #243b31" class="m-2"> Greetings from Appdate!</h2>
                        <h2 class="p-3" style="background: #7ca6a6">Login</h2>
                    </div>
                    <div class="card-body">
                        <form method="post" action="/login">
                            <div class="mb-4">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" name="email" id="email" class="form-control" id="username" required/>
                            </div>
                            <div class="mb-4">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" name="password" id="password" class="form-control" id="password" required/>
                            </div>
                            <div class="d-grid">
                                <button type="login" class="btn rounded text-white" style="background: #7ca6a6">Login</button>
                                <p id="error" class="error text-danger">{{error}}</p>
                             </div>
                        </form>
                        <div class="d-grid">
                            <a href="/signup" class="link-primary text-center text-decoration-none">New here? Create an account</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
